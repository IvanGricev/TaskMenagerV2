
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskMenagerV2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskMenagerV2.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">TaskMenagerV2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-body-secondary" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-body-secondary" asp-area="" asp-page="/AddNew">Add new</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-body-secondary" asp-area="" asp-page="/Edit">Edit</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-body-secondary" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <div class="nav-item">
                        <a class="nav-link text-body-secondary" asp-area="" asp-page="/Account">Account</a>
                    </div>
                    <div id="google_translate_element" class="translator"></div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="themeSwitch" onclick="switchTheme()">
                        <label class="form-check-label" for="themeSwitch">Dark Mode</label>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mb-4 pb-4">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2024 - TaskMenagerV2 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <style>
        a {
            color: black;
        }

        body.dark-mode {
        background-color: #121212;
        color: #e0e0e0;
        }

        body.dark-mode .navbar {
        background-color: #333;
        }

        body.dark-mode .nav-item {
        color: #e0e0e0;
        }

        body.dark-mode a{
        color: #e0e0e0;
        }

        body.dark-mode .navbar .nav-link {
        color: #ffffff;
        }

        .text-body-secondary{

        }
        
        /*achivements cards*/

        .card{
            height: 170px;
        }

        body.dark-mode .footer {
        background-color: #333;
        color: #e0e0e0;
        }

        body.dark-mode .card {
            background-color: #333;
            color: #e0e0e0;
        }

        body.dark-mode .card-title,
        body.dark-mode .card-text {
            color: #e0e0e0;
        }

        body.dark-mode .progress-bar {
            background-color: #e0e0e0;
        }

        body.dark-mode .progress {
            background-color: #333;
        }

        .text-body-secondary {
            color: black !important;
        }

        body.dark-mode .text-body-secondary {
            color: #e0e0e0 !important;
        }

        body.dark-mode input,
        body.dark-mode textarea,
        body.dark-mode select {
            background: transparent;
            color: white;
            border-color: white;
        }

        body.dark-mode input:focus,
        body.dark-mode textarea:focus,
        body.dark-mode select:focus {
            background: transparent;
            color: white;
        }

        /*burger menu*/

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(92,46,78, 1)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 8h24M4 16h24M4 24h24'/%3E%3C/svg%3E");
        }

        body.dark-mode .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(255, 255, 255, 0.5)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 8h24M4 16h24M4 24h24'/%3E%3C/svg%3E");
        }

    </style>
    
    <script>
        const currentTheme = localStorage.getItem('theme');
        if (currentTheme) {
            document.body.classList.add(currentTheme);
            document.getElementById('themeSwitch').checked = currentTheme === 'dark-mode';
        }

        function switchTheme() {
            document.body.classList.toggle('dark-mode');

            let theme = 'light';
            if (document.body.classList.contains('dark-mode')) {
                theme = 'dark-mode';
            }

            localStorage.setItem('theme', theme);
        }

    </script>

    <script src="script.js"></script>
    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement(
                { pageLanguage: 'en' },
                'google_translate_element'
            );
        }
    </script>
    <script type="text/javascript" src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

